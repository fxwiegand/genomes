{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "data" : {"name" : "fasta"},
  "autosize": {
    "type": "fit",
    "contains": "content",
    "resize": true
  },
  "height": 250,
  "title": "Chromosom",
  "selection": {
    "grid": {
      "type": "interval",
      "bind": "scales"
    }
  },
  "scales": [
    {
      "name": "position"
    }],
  "mark": {
    "type": "square",
    "filled": "true",
    "shape": "square",
    "clip": true
  },
  "encoding": {
    "y": {
      "field": "row",
      "type": "ordinal",
      "axis": null
    },
    "x": {
      "field": "position",
      "type": "quantitative",
      "scale": {},
      "axis": {
        "title": "Position"
      }
    },
    "size": {"value": 100},
    "color": {
      "name": "color",
      "type": "nominal",
      "field": "marker_type",
      "title": "Base",
      "scale": {
        "domain": ["A", "C", "G", "T", "N", "Variant"],
        "range": ["#94DB6B", "#F2B671", "#F28CC2", "#7284A8", "#F26A6A", "#AAAAAA"],
        "type": "ordinal"
      }
    },
    "tooltip": [
      {"field": "base", "type": "nominal"},
      {"field": "reference", "type": "nominal"},
      {"field": "alternatives", "type": "nominal"},
      {"field": "name", "type": "nominal"},
      {"field": "position", "type": "quantitative"},
      {"field": "flags[1]", "type": "nominal"},
      {"field": "flags[2]", "type": "nominal"},
      {"field": "flags[4]", "type": "nominal"},
      {"field": "flags[8]", "type": "nominal"},
      {"field": "flags[16]", "type": "nominal"},
      {"field": "flags[32]", "type": "nominal"},
      {"field": "flags[64]", "type": "nominal"},
      {"field": "flags[128]", "type": "nominal"}
    ]
  }
}