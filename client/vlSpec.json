{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "data" : {"name" : "fasta"},
  "autosize": {
    "type": "fit",
    "contains": "content",
    "resize": true
  },
  "height": 250,
  "title": "Chromosom",
  "selection": {
    "grid": {
      "type": "interval",
      "bind": "scales"
    }
  },
  "scales": [
    {
      "name": "position"
    }],
  "mark": {
    "type": "rule"
  },
  "encoding": {
    "y": {
      "field": "row",
      "type": "ordinal",
      "axis": null
    },
    "x": {
      "field": "start_position",
      "type": "quantitative",
      "scale": {},
      "axis": {
        "title": "Position"
      }
    },
    "x2": {
      "field": "end_position"
    },
    "size": {"value": 5},
    "opacity": {
      "value": 0.8
    },
    "color": {
      "name": "color",
      "type": "nominal",
      "field": "marker_type",
      "title": "Base",
      "scale": {
        "domain": ["A", "C", "G", "T", "N", "Variant", "Insertion", "Deletion", "Match"],
        "range": ["#CADB69", "#F2B671", "#F28CC2", "#7284A8", "#A23E11", "#000000", "#047C0A", "#CC1414", "#BBBBBB"],
        "type": "ordinal"
      },
      "legend": {
        "symbolType" : "stroke"
      }
    },
    "tooltip": [
      {"field": "marker_type", "type": "nominal"},
      {"field": "bases", "type": "nominal"},
      {"field": "reference", "type": "nominal"},
      {"field": "alternatives", "type": "nominal"},
      {"field": "name", "type": "nominal"},
      {"field": "flags[1]", "type": "nominal"},
      {"field": "flags[2]", "type": "nominal"},
      {"field": "flags[4]", "type": "nominal"},
      {"field": "flags[8]", "type": "nominal"},
      {"field": "flags[16]", "type": "nominal"},
      {"field": "flags[32]", "type": "nominal"},
      {"field": "flags[64]", "type": "nominal"},
      {"field": "flags[128]", "type": "nominal"}
    ]
  }
}