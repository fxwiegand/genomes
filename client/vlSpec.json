{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "data" : {"name" : "fasta"},
  "autosize": {
    "type": "fit",
    "contains": "content",
    "resize": true
  },
  "height": 300,
  "title": "Chromosom",
  "selection": {
    "grid": {
      "type": "interval",
      "bind": "scales"
    }
  },
  "scales": [
    {
      "name": "position"
    }],
  "autosize": {
    "resize": "true",
    "type": "fit",
    "contains": "padding"
  },
  "mark": {
    "type": "square",
    "filled": "true",
    "shape": "square",
    "clip": true
  },
  "encoding": {
    "y": {
      "field": "row",
      "type": "ordinal",
      "axis": null
    },
    "x": {
      "field": "position",
      "type": "quantitative",
      "axis": {
        "title": "Position",
        "minExtent": 100,
        "maxExtent": 100
      }
    },
    "size": {"value": 100},
    "color": {
      "name": "color",
      "type": "nominal",
      "field": "base",
      "title": "Base",
      "scale": {
        "domain": ["A", "C", "G", "T", "N"],
        "range": ["#94DB6B", "#F2B671", "#F28CC2", "#7284A8", "#F26A6A"],
        "type": "ordinal"
      }
    }

  }
}