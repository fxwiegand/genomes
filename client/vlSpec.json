{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  //data: {"url": "http://localhost:8000/api/v1/reference/1/0/1000"},
  "data" : {"name" : "fasta"},
  "width": "$(window).width() - 150",
  "height": "25",
  "title": "Chromosom",
  "selection": {
    "grid": {
      "type": "interval",
      "bind": "scales"
    }
  },
  "scales": [
    {
      "name": "position",
      "domainMin": "0"
    }],
  "autosize": {
    "resize": "true",
    //"type": "fit",
    "contains": "padding"
  },
  "mark": {
    "type": "square",
    "filled": "true",
    "shape": "square"
  },
  "encoding": {
    "x": {
      "field": "position",
      "type": "quantitative",
      "axis": {
        "title": "Position"
      },
      "domainMin": "0"
    },
    "size": {"value": "100"},
    "color": {
      "field": "base",
      "title": "Base"
    },

  }
}