{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "autosize": {
    "type": "fit",
    "contains": "content",
    "resize": true
  },
  "background": "white",
  "padding": 5,
  "width": 200,
  "height": 250,
  "title": {
    "text": "Chromosom",
    "frame": "group"
  },
  "style": "cell",
  "data": [
    {
      "name": "grid_store"
    },
    {
      "name": "fasta"
    },
    {
      "name": "data_0",
      "source": "fasta",
      "transform": [
        {
          "type": "formula",
          "expr": "datum[\"flags\"] && datum[\"flags\"][\"1\"]",
          "as": "flags.1"
        },
        {
          "type": "formula",
          "expr": "datum[\"flags\"] && datum[\"flags\"][\"2\"]",
          "as": "flags.2"
        },
        {
          "type": "formula",
          "expr": "datum[\"flags\"] && datum[\"flags\"][\"4\"]",
          "as": "flags.4"
        },
        {
          "type": "formula",
          "expr": "datum[\"flags\"] && datum[\"flags\"][\"8\"]",
          "as": "flags.8"
        },
        {
          "type": "formula",
          "expr": "datum[\"flags\"] && datum[\"flags\"][\"16\"]",
          "as": "flags.16"
        },
        {
          "type": "formula",
          "expr": "datum[\"flags\"] && datum[\"flags\"][\"32\"]",
          "as": "flags.32"
        },
        {
          "type": "formula",
          "expr": "datum[\"flags\"] && datum[\"flags\"][\"64\"]",
          "as": "flags.64"
        },
        {
          "type": "formula",
          "expr": "datum[\"flags\"] && datum[\"flags\"][\"128\"]",
          "as": "flags.128"
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"start_position\"]) && isFinite(+datum[\"start_position\"])"
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "unit",
      "value": {},
      "on": [
        {
          "events": "mousemove",
          "update": "isTuple(group()) ? group() : unit"
        }
      ]
    },
    {
      "name": "grid",
      "update": "vlSelectionResolve(\"grid_store\", \"union\")"
    },
    {
      "name": "grid_start_position",
      "on": [
        {
          "events": {
            "signal": "grid_translate_delta"
          },
          "update": "panLinear(grid_translate_anchor.extent_x, -grid_translate_delta.x / width)"
        },
        {
          "events": {
            "signal": "grid_zoom_delta"
          },
          "update": "zoomLinear(domain(\"x\"), grid_zoom_anchor.x, grid_zoom_delta)"
        },
        {
          "events": [
            {
              "source": "scope",
              "type": "dblclick"
            }
          ],
          "update": "null"
        }
      ]
    },
    {
      "name": "grid_row",
      "on": [
        {
          "events": {
            "signal": "grid_translate_delta"
          },
          "update": "panLinear(grid_translate_anchor.extent_y, grid_translate_delta.y / height)"
        },
        {
          "events": {
            "signal": "grid_zoom_delta"
          },
          "update": "zoomLinear(domain(\"y\"), grid_zoom_anchor.y, grid_zoom_delta)"
        },
        {
          "events": [
            {
              "source": "scope",
              "type": "dblclick"
            }
          ],
          "update": "null"
        }
      ]
    },
    {
      "name": "grid_tuple",
      "on": [
        {
          "events": [
            {
              "signal": "grid_start_position || grid_row"
            }
          ],
          "update": "grid_start_position && grid_row ? {unit: \"\", fields: grid_tuple_fields, values: [grid_start_position,grid_row]} : null"
        }
      ]
    },
    {
      "name": "grid_tuple_fields",
      "value": [
        {
          "field": "start_position",
          "channel": "x",
          "type": "R"
        },
        {
          "field": "row",
          "channel": "y",
          "type": "E"
        }
      ]
    },
    {
      "name": "grid_translate_anchor",
      "value": {},
      "on": [
        {
          "events": [
            {
              "source": "scope",
              "type": "mousedown"
            }
          ],
          "update": "{x: x(unit), y: y(unit), extent_x: domain(\"x\"), extent_y: domain(\"y\")}"
        }
      ]
    },
    {
      "name": "grid_translate_delta",
      "value": {},
      "on": [
        {
          "events": [
            {
              "source": "window",
              "type": "mousemove",
              "consume": true,
              "between": [
                {
                  "source": "scope",
                  "type": "mousedown"
                },
                {
                  "source": "window",
                  "type": "mouseup"
                }
              ]
            }
          ],
          "update": "{x: grid_translate_anchor.x - x(unit), y: grid_translate_anchor.y - y(unit)}"
        }
      ]
    },
    {
      "name": "grid_zoom_anchor",
      "on": [
        {
          "events": [
            {
              "source": "scope",
              "type": "wheel",
              "consume": true
            }
          ],
          "update": "{x: invert(\"x\", x(unit)), y: invert(\"y\", y(unit))}"
        }
      ]
    },
    {
      "name": "grid_zoom_delta",
      "on": [
        {
          "events": [
            {
              "source": "scope",
              "type": "wheel",
              "consume": true
            }
          ],
          "force": true,
          "update": "pow(1.001, event.deltaY * pow(16, event.deltaMode))"
        }
      ]
    },
    {
      "name": "grid_modify",
      "on": [
        {
          "events": {
            "signal": "grid_tuple"
          },
          "update": "modify(\"grid_store\", grid_tuple, true)"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "rule",
      "clip": true,
      "style": [
        "rule"
      ],
      "interactive": true,
      "from": {
        "data": "data_0"
      },
      "encode": {
        "update": {
          "stroke": {
            "scale": "color",
            "field": "marker_type"
          },
          "opacity": {
            "value": 0.8
          },
          "tooltip": {
            "signal": "{\"marker_type\": ''+datum[\"marker_type\"], \"bases\": ''+datum[\"bases\"], \"reference\": ''+datum[\"reference\"], \"alternatives\": ''+datum[\"alternatives\"], \"name\": ''+datum[\"name\"], \"flags[1]\": ''+datum[\"flags.1\"], \"flags[2]\": ''+datum[\"flags.2\"], \"flags[4]\": ''+datum[\"flags.4\"], \"flags[8]\": ''+datum[\"flags.8\"], \"flags[16]\": ''+datum[\"flags.16\"], \"flags[32]\": ''+datum[\"flags.32\"], \"flags[64]\": ''+datum[\"flags.64\"], \"flags[128]\": ''+datum[\"flags.128\"]}"
          },
          "x": {
            "scale": "x",
            "field": "start_position"
          },
          "x2": {
            "scale": "x",
            "field": "end_position"
          },
          "y": {
            "scale": "y",
            "field": "row",
            "band": 0.5
          },
          "strokeWidth": {
            "value": 5
          }
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {
        "data": "data_0",
        "fields": [
          "start_position",
          "end_position"
        ]
      },
      "domainRaw": {
        "signal": "grid[\"start_position\"]"
      },
      "range": [
        0,
        {
          "signal": "width"
        }
      ],
      "nice": true,
      "zero": true
    },
    {
      "name": "y",
      "type": "band",
      "domain": {
        "data": "data_0",
        "field": "row",
        "sort": true
      },
      "range": [
        0,
        {
          "signal": "height"
        }
      ],
      "paddingInner": 0,
      "paddingOuter": 0
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": [
        "A",
        "C",
        "G",
        "T",
        "N",
        "Variant",
        "Insertion",
        "Deletion",
        "Match"
      ],
      "range": [
        "#CADB69",
        "#F2B671",
        "#F28CC2",
        "#7284A8",
        "#A23E11",
        "#000000",
        "#047C0A",
        "#CC1414",
        "#BBBBBB"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "tickCount": {
        "signal": "ceil(width/40)"
      },
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Position",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {
        "signal": "ceil(width/40)"
      },
      "zindex": 0
    }
  ],
  "legends": [
    {
      "symbolType": "stroke",
      "title": "Base",
      "stroke": "color",
      "encode": {
        "symbols": {
          "update": {
            "opacity": {
              "value": 0.8
            }
          }
        }
      }
    }
  ],
  "config": {}
}